{% extends 'AnthillTendersBundle::main.html.twig' %}

{% block header %}  {% include 'header/header.html.twig' %} {% endblock %}

{% block content %}
    <h2 class="top_positions-title-bl"> {% trans %}title_tenders{% endtrans %}</h2>
    <div class="block-container">

        <div class="inner-bl">
            <div class="block_left">
               <form id="facet" class="tenders_filter">
                    <div>
                        <p class="list_category">Категории:</p>
                         {% for category in categories %}
                            <input id="category_{{ category.id }}" type="checkbox" name="category[]" class="custom_checkbox"  value="{{ category.id }}"/> <label for="category_{{ category.id }}" class="custom_label"> {{ category.name }}</label>
                         {% endfor %}
                    </div>
                    <div  class="block_inputs"><input class="input_text-normal all" name="company" type="text" placeholder="Название компании"/></div>
                    <div class="block_inputs"><input class="input_text-normal all"  name="name" type="text" placeholder="Название тендера"/></div>
                    <div class="block_inputs">
                        <input class="input_text-normal date" name="date_start" type="text" placeholder="Дата с"/>
                        <input class="input_text-normal date_end" name="date_end"   type="text" placeholder="Дата по"/>
                    </div>
                   <div class="block_inputs right"><input class="input_button_normal" type="submit"  value="Поиск"/></div>
                </form>
            </div>

            <div  class="block_right">

            </div>

            <div  class="block_center">
                <div class="tenders_list">
                    {% include 'AnthillTendersBundle:partial:tender_partial.html.twig' %}
                </div>
            </div>


            <div class="clear"></div>
        </div>
    </div>


{% endblock %}



{% block footer  %} {%  include "footer/footer.html.twig" %}{% endblock %}